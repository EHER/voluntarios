{% extends "EherVoluntariosBundle::layout.html.twig" %}
{% block title %}Quero ser Volunt√°rio - Contato{% endblock %}
{% block content %}
    <div class="well span3">
        <h3>Buscar de Entidades</h3>
        <form action="" class="">
            <label for="cidade">Cidade</label>
            <input name="cidade" type="text" value="{{ cityName }}" />
            <label for="uf">UF</label>
            <input name="uf" type="text" value="{{ stateName }}" />
            <input type="submit" value="Buscar" />
        </form>
    </div>
    {% if search %}
        <div class="span5">
            {% if search.getNumFound > 0 %}
                <table class="table table-bordered table-striped">
                    <tbody>
                    {% for place in search.getItems %}
                        <tr>
                            <td>{{ place.name }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <h4>Nenhum resultado.</h4>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
