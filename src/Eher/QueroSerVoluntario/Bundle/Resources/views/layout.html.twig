{% extends "::base.html.twig" %}
{% block title %}{% trans %}Quero ser Voluntário!{% endtrans %}{% endblock %}
{% block body %}
    <div id="fb-root"></div>
    <script>
        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=288151054658648";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="{{ path('homepage') }}">{% trans %}Quero ser Voluntário{% endtrans %}</a>
          <div class="nav-collapse">
            <ul class="nav">
              {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('admin') }}">{% trans %}Admin{% endtrans %}</a></li>
              {% endif %}
              <li><a href="{{ path('sobre') }}">{% trans %}Sobre o Site{% endtrans %}</a></li>
              <li><a href="{{ path('buscar') }}">{% trans %}Buscar Entidade{% endtrans %}</a></li>
              <li><a href="{{ path('voluntario_cadastrar') }}">{% trans %}Cadastrar Voluntário{% endtrans %}</a></li>
              <li><a href="{{ path('entidade_cadastrar') }}">{% trans %}Cadastrar Entidade{% endtrans %}</a></li>
              <li><a href="{{ path('contato') }}">{% trans %}Contato{% endtrans %}</a></li>
            </ul>
            <ul class="lang-menu nav">
                <li>
                    <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'pt_BR'})) }}" rel="alternate" hreflang="pt-br">
                        <img src="{{ asset('img/blank.gif') }}" class="flag flag-br" alt="Site em Português" />
                    </a>
                </li>
                <li>
                    <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}" rel="alternate" hreflang="en">
                        <img src="{{ asset('img/blank.gif') }}" class="flag flag-us" alt="Website in English" />
                    </a>
                </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
        {% block content %}{% endblock %}
    </div>
    <hr>
    <div style="text-align:center; height:80px">
        <div class="fb-like" data-href="http://facebook.com/queroservoluntario" data-width="450" data-show-faces="true" data-send="true"></div>
    </div>
    <footer>
        © 2011-{{ "now"|date("Y") }}
        <a href="{{ path('sobre') }}">{% trans %}QueroSerVoluntario{% endtrans %}</a> <a href="{{ path('brasil') }}">{% trans %}Brasil{% endtrans %}</a>
    </footer>
{% endblock %}
