{% extends "::base.html.twig" %}
{% block title %}Quero ser Voluntário!{% endblock %}
{% block body %}
    <div id="fb-root"></div>
    <script>
        (function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=288151054658648";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="{{ path('homepage') }}">Quero ser Voluntário</a>
          <div class="nav-collapse">
            <ul class="nav">
              <li><a href="{{ path('sobre') }}">Sobre o Site</a></li>
              <li><a href="{{ path('buscar') }}">Buscar Entidade</a></li>
              <li><a href="{{ path('voluntario_new') }}">Cadastrar Voluntário</a></li>
              <li><a href="{{ path('entidade_new') }}">Cadastrar Entidade</a></li>
              <li><a href="{{ path('contato') }}">Contato</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
        {% block content %}{% endblock %}
    </div>
    <hr>
    <div style="text-align:center;">
        <div class="fb-like" data-href="http://facebook.com/queroservoluntario" data-width="450" data-layout="button_count" data-show-faces="true" data-send="false"></div>
    </div>
    <footer>
        © 2011-{{ "now"|date("Y") }}
        <a href="{{ path('sobre') }}">QueroSerVoluntario</a> <a href="{{ path('brasil') }}">Brasil</a>
    </footer>
{% endblock %}
