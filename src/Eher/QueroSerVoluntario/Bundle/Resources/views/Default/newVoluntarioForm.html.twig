{% extends "EherQueroSerVoluntarioBundle::layout.html.twig" %}
{% block title %}{% trans %}Quero ser Voluntário{% endtrans %} - {% trans %}Cadastro de Voluntário{% endtrans %}{% endblock %}
{% block content %}
    <div class="span6">
        <h2>{% trans %}Cadastro de Voluntário{% endtrans %}</h2>
        <p>{% trans %}Gostaria de contribuir com o seu tempo para ajudar alguém{% endtrans %}?</p>
        <p>{% trans %}Deixe seus dados que assim que tivermos uma oportunidade com o seu perfil, entramos em contato{% endtrans %}.</p>
        <br/>
        <form action="{{ path('voluntario_criar') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
                {{ form_widget(form) }}
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">{% trans %}Cadastrar{% endtrans %}</button>
                    <button type="reset" class="btn">{% trans %}Cancelar{% endtrans %}</button>
                </div>
        </form>
    </div>
{% endblock %}
