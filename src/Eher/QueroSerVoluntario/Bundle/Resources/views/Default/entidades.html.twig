{% extends "EherQueroSerVoluntarioBundle::layout.html.twig" %}
{% block title %}{% trans %}Quero ser Voluntário{% endtrans %} - {% trans %}Entidades em{% endtrans %} {{ cityName|title }} - {{ stateName|upper }}{% endblock %}
{% block content %}
    <h2>{% trans %}Entidades em{% endtrans %} {{ cityName|title }} - {{ stateName|upper }}</h2>
    <p><a href="{{ path('cidade_em_estado', {'estado': stateName}) }}">{% trans %}Mudar cidade{% endtrans %}</a></p>
    {% if search %}
        <div class="col-md-8">
            {% if search.getNumFound > 0 %}
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>{% trans %}Nome{% endtrans %}</th>
                            <th>{% trans %}Endereço{% endtrans %}</th>
                            <th class="col-md-2">{% trans %}Telefone{% endtrans %}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for place in search.getItems %}
                            <tr>
                                <td> {{ place.name }} </td>
                                <td> {{ place.address.toOneLine }} </td>
                                <td> {{ place.phone }} </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <h4>{% trans %}Nenhuma entidade cadastrada{% endtrans %}</h4>
                <p>{% trans %}No momento não temos entidades cadastradas em{% endtrans %} {{ cityName|title }}.</p>
                <p>{% trans %}Você pode{% endtrans %}:
                <ul>
                    <li>
                        {% trans %}Fazer o{% endtrans %} <a href="{{ path('voluntario_cadastrar') }}">{% trans %}Cadastro de Voluntário{% endtrans %}</a> {% trans %}para que possamos encontrar uma oportunidade para você{% endtrans %}</p>
                    </li>
                    <li>{% trans %}Adicionar uma entidade no{% endtrans %} <a href="{{ path('entidade_cadastrar') }}">{% trans %}Cadastro de Entidade{% endtrans %}</a></li>
                </ul>
                </br>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
