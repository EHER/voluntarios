{% extends "EherQueroSerVoluntarioFrontendBundle::layout.html.twig" %}
{% block title %}{% trans %}Quero ser Voluntário{% endtrans %} - {% trans %}Busca de Entidades{% endtrans %}{% endblock %}
{% block content %}
    <h2>{% trans %}Busca de Entidades{% endtrans %}</h2>
    <div class="col-md-3 well">
        <form role="form">
            <div class="form-group">
                    <label for="cidade">{% trans %}Cidade{% endtrans %}</label>
                    <input name="cidade" type="text" class="form-control" value="{{ cidade }}" placeholder="{% trans %}Exemplo{% endtrans %}: São Paulo"/>
            </div>

            <div class="form-group">
                    <label for="estado">{% trans %}Estado{% endtrans %}</label>
                    <input name="estado" type="text" class="form-control" value="{{ estado }}" placeholder="{% trans %}Exemplo{% endtrans %}: SP"/>
            </div>
            <button type="submit" class="btn btn-primary">{% trans %}Buscar{% endtrans %}</button>
        </form>
    </div>
    {% if search is not null %}
        <div class="col-md-8">
            {% if search|length > 0 %}
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>{% trans %}Nome{% endtrans %}</th>
                            <th>{% trans %}Endereço{% endtrans %}</th>
                            <th class="col-md-3">{% trans %}Telefone{% endtrans %}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in search %}
                            <tr>
                                <td>{{ entity.nome }}</td>
                                <td>{{ entity.endereco }} </td>
                                <td>{{ entity.telefone|replace({' - ': "\n"}) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <h4>Nenhum resultado.</h4>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
