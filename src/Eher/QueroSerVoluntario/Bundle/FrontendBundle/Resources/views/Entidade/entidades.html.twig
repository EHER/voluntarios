{% extends "EherQueroSerVoluntarioFrontendBundle::layout.html.twig" %}
{% block title %}{% trans %}Quero ser Voluntário{% endtrans %} - {% trans %}Entidades em{% endtrans %} {{ cidade|title }} - {{ estado|upper }}{% endblock %}
{% block content %}
    <h2>{% trans %}Entidades em{% endtrans %} {{ cidade|title }} - {{ estado|upper }}</h2>
    <p><a href="{{ path('cidade_em_estado', {'estado': estado}) }}">{% trans %}Mudar cidade{% endtrans %}</a></p>
        <div class="col-md-8">
            {% if search|length > 0 %}
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>{% trans %}Nome{% endtrans %}</th>
                            <th>{% trans %}Endereço{% endtrans %}</th>
                            <th class="col-md-3">{% trans %}Telefone{% endtrans %}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entity in search %}
                            <tr>
                                <td>{{ entity.nome }}</td>
                                <td>{{ entity.endereco }}</td>
                                <td>{{ entity.telefone|replace({' - ': "\n"})|nl2br }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <h4>{% trans %}Nenhuma entidade cadastrada{% endtrans %}</h4>
                <p>{% trans %}No momento não temos entidades cadastradas em{% endtrans %} {{ cidade|title }}.</p>
                <p>{% trans %}Você pode{% endtrans %}:
                <ul>
                    <li>
                        {% trans %}Fazer o{% endtrans %} <a href="{{ path('voluntario_cadastrar') }}">{% trans %}Cadastro de Voluntário{% endtrans %}</a> {% trans %}para que possamos encontrar uma oportunidade para você{% endtrans %}</p>
                    </li>
                    <li>{% trans %}Adicionar uma entidade no{% endtrans %} <a href="{{ path('entidade_cadastrar') }}">{% trans %}Cadastro de Entidade{% endtrans %}</a></li>
                </ul>
        </div>
    {% endif %}
{% endblock %}
