#!/usr/bin/make -f
PKGNAME  := queroservoluntario
DESTDIR  := /var/www/queroservoluntario

build:
	dh_testdir
	make install

clean:
	dh_testdir
	dh_testroot
	rm -rf debian/$(PKGNAME)/
	rm -rf vendor/
	dh_clean

binary-indep:
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
	dh_install
	mv -v debian/$(PKGNAME)/$(DESTDIR)/app/config/config_prod.yml debian/$(PKGNAME)/$(DESTDIR)/app/config/config_prod.yml.example
	rm -rf debian/$(PKGNAME)/$(DESTDIR)/app/config/config_prod.yml
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep
.PHONY: build clean binary-indep binary-arch binary
